  <footer>Save to Home Screen for app-like access</footer>
  <script>
    const save = () => localStorage.setItem('gymProgress', JSON.stringify(state));
    const load = () => JSON.parse(localStorage.getItem('gymProgress') || '{}');
    let state = load();

    document.querySelectorAll('.ex').forEach((ex, i) => {
      const key = 'ex_' + i;
      const data = state[key] || { done: false, weight: '' };

      const box = document.createElement('input');
      box.type = 'checkbox';
      box.checked = data.done;
      box.style.marginRight = '8px';

      const weight = document.createElement('input');
      weight.type = 'number';
      weight.placeholder = 'kg';
      weight.value = data.weight;
      weight.style.width = '60px';
      weight.style.marginLeft = '8px';

      box.onchange = () => { data.done = box.checked; state[key] = data; save(); };
      weight.oninput = () => { data.weight = weight.value; state[key] = data; save(); };

      ex.prepend(box);
      ex.appendChild(weight);
    });
  </script>
